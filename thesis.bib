doi = {10.1242/JEB.090845)},
journal = {Journal of Experimental Biology},
month = {jan},
title = {{Rolling with the flow: Bumblebees flying in unsteady wakes}},
url = {https://journals.biologists.com/jeb/article/doi/10.1242/jeb.090845/257454/Rolling-with-the-flow-Bumblebees-flying-in},
year = {2013}
