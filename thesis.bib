issn = {19326203},
journal = {PLoS ONE},
number = {11},
pmid = {19924228},
title = {{The typical flight performance of blowflies: Measuring the normal performance envelope of Calliphora vicina using a novel corner-cube arena}},
volume = {4},
year = {2009}
}
