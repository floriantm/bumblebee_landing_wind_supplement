issn = {0022-0949},
journal = {Journal of Experimental Biology},
keywords = {Bee,Compound eye,Landmark orientation,Nocturnal vision,Resolution,Sensitivity,Spatial summation,Wasp},
month = {jun},
number = {11},
pages = {1737--1746},
publisher = {The Company of Biologists},
title = {{Seeing in the dark: vision and visual behaviour in nocturnal bees and wasps}},
