title = {{Biomimetic sensor modeling and simulations for flight control of a micromechanical flying insect}},
url = {http://ezproxy.net.ucf.edu/login?url=http://search.proquest.com/docview/305362457?accountid=10003{\%}5Cnhttp://sfx.fcla.edu/ucf?url{\_}ver=Z39.88-2004{\&}rft{\_}val{\_}fmt=info:ofi/fmt:kev:mtx:dissertation{\&}genre=dissertations+{\&}+theses{\&}sid=ProQ:ProQuest+Dissertations+{\&}+T},
