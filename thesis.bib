isbn = {0022-0949},
issn = {0022-0949},
journal = {The Journal of experimental biology},
keywords = {aerodynamics,dimensional motions in inviscid,flapping,flight,fluids,insect,kinematics,model,quasi-steady,rotation,rotational forces,which we adapted,wing},
number = {Pt 8},
pages = {1087--1096},
pmid = {11919268},
title = {{The aerodynamic effects of wing rotation and a revised quasi-steady model of flapping flight.}},
url = {http://jeb.biologists.org/content/205/8/1087{\%}5Cnhttp://jeb.biologists.org/content/205/8/1087.abstract{\%}5Cnhttp://jeb.biologists.org/content/205/8/1087.full.pdf{\%}5Cnhttp://www.ncbi.nlm.nih.gov/pubmed/11919268},
